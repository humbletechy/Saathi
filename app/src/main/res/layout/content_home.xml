<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/home_image"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#EEEEEE"
                    android:layout_gravity="center"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    android:layout_marginStart="15dp"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="#8BC34A"
                    android:layout_marginLeft="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:textSize="22sp"
                        android:id="@+id/home_name"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:text="Hello, Shivansh Tiwari"
                        android:layout_marginLeft="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp"
                        android:id="@+id/home_aadhar"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:text="AADHAR NO :- 88888888888"
                        android:layout_marginLeft="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="15dp"
                        android:id="@+id/home_contact"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:text="Contact - 8989419500"
                        android:layout_marginLeft="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/home_email"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:text="Email : hack36@iiita.ac.in"
                        android:layout_marginLeft="15dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/krishi_bot_view"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:id="@+id/krishi_bot_image"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="Krishi-Bot"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/krishi_soil"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="Soil Check"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:id="@+id/krishi_advice"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Queires"
                            android:textColor="@color/Black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            android:id="@+id/krishi_general"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="General Tips"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            android:id="@+id/krishi_weather"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="Weather"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            android:id="@+id/krishi_disease"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="Disease"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            android:id="@+id/krishi_history"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="History"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            android:id="@+id/krishi_predict"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="Prediction"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_margin="2dp"
                    android:layout_height="130dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="#EEEEEE"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            android:id="@+id/krishi_complaint"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#8BC34A"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:text="Complaint"
                            android:layout_marginLeft="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>