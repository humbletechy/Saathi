<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/home_image"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#EEEEEE"
                    android:layout_gravity="center"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    android:layout_marginStart="15dp"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="#8BC34A"
                    android:layout_marginLeft="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:textSize="22sp"
                        android:id="@+id/home_name"
                        android:textColor="@color/White"
                        android:gravity="center"
                        android:text="Hello, Shivansh Tiwari"
                        android:layout_marginLeft="20dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginEnd="20dp"
                            android:id="@+id/phone_call"
                            android:layout_height="40dp"
                            android:src="@drawable/call_icon"
                            android:layout_marginRight="5dp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:id="@+id/email"
                            android:layout_marginEnd="20dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/mail_icon"
                            android:layout_marginRight="25dp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:id="@+id/location"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:layout_marginRight="20dp" />
                    </LinearLayout>
                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="@string/predict_a_disease"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:weightSum="3"
                android:background="@color/White"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:onClick="callDoc"
                        android:src="@drawable/expert_1346618"
                        android:layout_margin="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Call Doctor"
                        android:textColor="@color/Black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_local_hospital_black_24dp"
                        android:layout_margin="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Nearest Hospital"
                        android:textColor="@color/Black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_alert_black_24dp"
                        android:layout_margin="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Alerts"
                        android:textColor="@color/Black"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Tasks..."
                android:background="@color/White"
                android:textColor="@color/Black"
                android:layout_margin="8dp"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Black"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:scrollbars="vertical"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"/>


        </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:onClick="addTask"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        />



</RelativeLayout>
